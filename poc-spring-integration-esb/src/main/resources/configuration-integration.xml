<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/integration 
		http://www.springframework.org/schema/integration/spring-integration.xsd
		http://www.springframework.org/schema/integration/http 
		http://www.springframework.org/schema/integration/http/spring-integration-http.xsd
        http://www.springframework.org/schema/oxm 
        http://www.springframework.org/schema/oxm/spring-oxm.xsd"
	xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:oxm="http://www.springframework.org/schema/oxm" xmlns:int-http="http://www.springframework.org/schema/integration/http">

	<int:annotation-config />

	<int:channel id="onlineOrderRequest" />
	<int:channel id="onlineOrderReply" />

	<int-http:inbound-gateway supported-methods="GET"
		mapped-request-headers="MY_CUSTOM_HEADERS, X-*, HTTP_REQUEST_HEADERS"
		mapped-response-headers="MY_CUSTOM_HEADERS, X-*, HTTP_RESPONSE_HEADERS"
		path="/onlineOrder" request-channel="onlineOrderRequest"
		reply-channel="onlineOrderReply">
	</int-http:inbound-gateway>

	<int:channel id="logging" />
	<int:wire-tap pattern="*" channel="logging" />
	<int:logging-channel-adapter channel="logging"
		level="INFO" log-full-message="true"
		logger-name="com.shawnyang.poc.spring.integration.channel.GlobalChannelLogger">
	</int:logging-channel-adapter>
</beans>
